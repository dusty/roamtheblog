<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <title><%= site.title %><%= "- #{@page}" if @page %></title>

  <!-- Le HTML5 shim, for IE6-8 support of HTML elements -->
  <!--[if lt IE 9]>
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
  <![endif]-->

  <!-- Stylesheets -->
  <link rel="stylesheet" href="http://twitter.github.com/bootstrap/1.3.0/bootstrap.min.css">
  <link rel="stylesheet" href="/admin.css" />

  <!-- Le fav and touch icons -->
  <link rel="shortcut icon" href="/favicon.ico">
  <link rel="apple-touch-icon" href="/apple-touch-icon.png">
  <link rel="apple-touch-icon" sizes="72x72" href="/apple-touch-icon-72x72.png">
  <link rel="apple-touch-icon" sizes="114x114" href="/apple-touch-icon-114x114.png">

  <!-- JS -->
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.6.4/jquery.min.js"></script>
  <script src="http://twitter.github.com/bootstrap/1.3.0/bootstrap-alerts.js"></script>
  <script src="http://twitter.github.com/bootstrap/1.3.0/bootstrap-modal.js"></script>
  <script src="/jquery.autogrowtextarea.js"></script>
  <script src="/admin.js"></script>
</head>
<body>

  <div class="topbar">
    <div class="fill">
      <div class="container">
        <a class="brand" target="x-preview" href="/"><%= site.domain %></a>
        <% if current_user %>
        <ul class="nav">
          <li class="<%= check_active('/admin/posts') %>"><a href="/admin/posts">Posts</a></li>
          <li class="<%= check_active('/admin/pages') %>"><a href="/admin/pages">Pages</a></li>
          <li class="<%= check_active('/admin/designs') %>"><a href="/admin/designs">Designs</a></li>
          <li class="<%= check_active('/admin/users') %>"><a href="/admin/users">Users</a></li>
          <li class="<%= check_active('/admin/settings') %>"><a href="/admin/settings">Settings</a></li>
        </ul>
        <ul class="nav secondary-nav">
          <li class=""><a href="/admin/session" class="delete">Logout</a></li>
        </ul>
        <% end %>
      </div>
    </div>
  </div>

  <div class="container">
    <div class="message pull-right">
      <%= flash_messages %>
    </div>
    <div class="hero-unit">
      <%= yield %>
    </div>
  </div>

  <footer class="footer">
    <div class="container">
      <p class="pull-right">&copy; <%= site.domain %> <%= Time.now.year %></p>
      <p>powered by <a href="https://github.com/dusty/roamtheblog"
                       target="x-github">roamtheblog</a> software</p>
    </div>
  </footer>

</body>
</html>