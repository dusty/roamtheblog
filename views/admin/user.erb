<h2><%= @user.new_record? ? "New User" : @user.name %></h2>
<blockquote><p>The Name field is used in posts as the Author.  Leave the password fields blank unless you want to change the password for the user.</p></blockquote>

<form action="<%= admin_user_path(@user) %>" method="post" name="user">
<input type="hidden" name="_method" value="<%= form_method(@user) %>" />

  <fieldset>

    <div class="clearfix<%= error_class(@user, :login) %>">
      <label for="login">Login</label>
      <div class="input">
        <input id="login" name="user[login]" type="text" class="span8"
               value="<%= @user.login %>" placeholder="username" />
        <span class="help-inline"><%= errors_for(@user, :login) %></span>
      </div>
    </div>

    <div class="clearfix<%= error_class(@user, :name) %>">
      <label for="name">Name</label>
      <div class="input">
        <input id="name" name="user[name]" type="text" class="span8"
               value="<%= @user.name %>" placeholder="Firstname Lastname" />
        <span class="help-inline"><%= errors_for(@user, :name) %></span>
      </div>
    </div>

    <div class="clearfix<%= error_class(@user, :email) %>">
      <label for="email">Email</label>
      <div class="input">
        <input id="name" name="user[email]" type="email" class="span8"
               value="<%= @user.email %>" placeholder="myemail@mydomain.com" />
        <span class="help-inline"><%= errors_for(@user, :email) %></span>
      </div>
    </div>

    <div class="clearfix<%= error_class(@user, :password) %>">
      <label for="password">Password</label>
      <div class="input">
        <input id="password" name="user[password]" type="password" class="span8"
               value="" placeholder="password" />
        <span class="help-inline"><%= errors_for(@user, :password) %></span>
      </div>
    </div>

    <div class="clearfix<%= error_class(@user, :password_confirmation) %>">
      <label for="password_confirmation">Password</label>
      <div class="input">
        <input id="password_confirmation" name="user[password_confirmation]" type="password" class="span8"
               value="" placeholder="password" />
        <span class="help-inline"><%= errors_for(@user, :password_confirmation) %></span>
      </div>
    </div>

    <div class="actions">
      <input name="save" value="Save" type="submit" class="btn primary" />
      <% unless @user.new_record? %>
        <a href="<%= admin_user_path(@user) %>" class="btn danger delete_prompt"
           rel="Are you sure you want to delete this user?">Delete</a>
      <% end %>
      <a href="/admin/users" class="btn">Cancel</a>
    </div>

  </fieldset>

</form>
