<article class="post">
  <header>
    <h1><a href="{{post_path}}">{{post_title}}</a></h1>
    <h2>
      <time>{{post_date}}</time>
      &middot;
      by {{post_author}}
      {{#setting_disqus}}
      &middot;
      <a href="{{post_path}}#disqus_thread">Comments</a>
      {{/setting_disqus}}
    </h2>
  </header>
  
  <section class="content">
    {{{post_html}}}
    {{#setting_disqus}}
    <h5><a href="{{post_path}}#disqus_thread">Comments</a></h5>
    {{/setting_disqus}}
  </section>

</article>

<section class="recent">
  
  <header>
    <h1><a href="/blog">See All Posts >></a></h1>
    <h2>Recent Posts</h2>
  </header>
  
  <table>
    {{#posts}}
    <tr>
      <td class="time"><time>{{post_date}}</time></td>
      <td><a href="{{post_path}}">{{post_title}}</a></td>
    </tr>
    {{/posts}}
  </table>

</section>






