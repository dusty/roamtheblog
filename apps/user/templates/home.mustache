{{#post}}
<article class="post">
  <header>
    <h1><a href="{{path}}">{{title}}</a></h1>
    <h2>
      <time>{{date}}</time>
      &middot;
      by {{author}}
      {{#setting_disqus}}
      &middot;
      <a href="{{path}}#disqus_thread"
         data-disqus-identifier="{{slug}}">Comments</a>
      {{/setting_disqus}}
    </h2>
  </header>
  
  <section class="content">
    {{{html}}}
    {{#setting_disqus}}
    <h5><a href="{{path}}#disqus_thread" 
           data-disqus-identifier="{{slug}}">Comments</a></h5>
    {{/setting_disqus}}
  </section>

</article>

<section class="recent">
  
  <header>
    <h1><a href="/blog">See All Posts >></a></h1>
    <h2>Recent Posts</h2>
  </header>
  
  <table>
    <tr>
      <td class="time"><time>{{date}}</time></td>
      <td>{{title}}</td>
    </tr>
    {{#posts}}
    <tr>
      <td class="time"><time>{{date}}</time></td>
      <td><a href="{{path}}">{{title}}</a></td>
    </tr>
    {{/posts}}
  </table>

</section>
{{/post}}