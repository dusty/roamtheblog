<article class="post">
  <header>
    <h1><a href="{{path}}">{{title}}</a></h1>
    <blockquote>
    <p>
    <time>{{date}}</time>
    ·
    by {{author}}
    {{#has_tags?}}
      ·
      {{#tag_list}}
        <a href="{{path}}">{{tag}}</a>{{^last?}}, {{/last?}}
      {{/tag_list}}
    {{/has_tags?}}
    </p>
    </blockquote>
  </header>

  <section class="content">
    {{{html}}}
  </section>

  {{#active?}}
  {{#setting_disqus}}
  <h3><a href="{{path}}#disqus_thread" data-disqus-identifier="{{slug}}" data-no-turbolink="true">Comments</a></h3>
  {{/setting_disqus}}
  {{/active?}}

</article>

<section class="recent">
  <header>
    <h2>More Posts <span class="label notice"><a href="/blog">All</a></span></h2>
  </header>

  <table>
    <tr>
      <td class="time"><time>{{date}}</time></td>
      <td>{{title}}</td>
    </tr>
    {{#posts}}
    <tr>
      <td class="time"><time>{{date}}</time></td>
      <td><a href="{{path}}">{{title}}</a></td>
    </tr>
    {{/posts}}
  </table>

</section>
